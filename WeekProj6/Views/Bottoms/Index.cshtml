@model IEnumerable<WeekProj6.Models.Bottom>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 col-md-4">
            <div class="caption text-center">

                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>

                @if (item.Photo != "...")
                {
                    <a href="@Url.Action("Details", "Bottoms", new { id = item.BottomID })" class="thumbnail">
                        <img src=@Url.Content(item.Photo)>

                    </a>
                }
                    <p>@Html.DisplayFor(modelItem => item.Type)</p>
                    <p>@Html.DisplayFor(modelItem => item.Color)</p>
                    <p>@Html.DisplayFor(modelItem => item.Season)</p>
                    <p>@Html.DisplayFor(modelItem => item.Occasion)</p>

            </div>
        </div>

        <div>
            @Html.ActionLink("Edit", "Edit", new { id = item.BottomID }) |
            @Html.ActionLink("Details", "Details", new { id = item.BottomID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BottomID })
        </div>

    }


</div>
